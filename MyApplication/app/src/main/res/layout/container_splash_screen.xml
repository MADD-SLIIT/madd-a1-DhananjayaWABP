<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container_splash_screen_1"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/container_splash_screen">

  <ImageView
    android:id="@+id/image_background"
    android:layout_width="518dp"
    android:layout_height="1000dp"
    android:layout_gravity="center_horizontal|center_vertical"
    android:scaleType="centerInside"
    android:src="@drawable/image_background" />

  <LinearLayout
    android:id="@+id/container_logo"
    android:layout_width="205dp"
    android:layout_height="108.5dp"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal|center_vertical"
    android:layout_marginBottom="-3.5dp"
    android:clipToPadding="false"
    android:gravity="left|top"
    android:orientation="vertical"
    android:paddingBottom="3.5dp">
    
    <FrameLayout
      android:id="@+id/container_logo_frame"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      android:layout_marginLeft="68dp"
      android:layout_marginRight="67dp">
      
      <ImageView
        android:id="@+id/image_logo_vector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_logo_vector" />
      
      <ImageView
        android:id="@+id/image_logo_paw"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="22dp"
        android:scaleType="centerInside"
        android:src="@drawable/image_logo_paw" />
    </FrameLayout>
    
    <TextView
      android:id="@+id/text_logo_vet_visit"
      android:layout_width="match_parent"
      android:layout_height="31dp"
      android:layout_marginTop="7.5dp"
      android:layout_marginBottom="-3.5dp"
      android:layout_weight="1"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Vet Visit"
      android:textColor="#FF222222"
      android:textSize="25dp" />
  </LinearLayout>
</FrameLayout>
