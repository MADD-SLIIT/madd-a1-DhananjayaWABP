<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginTop="20dp">


    <FrameLayout
        android:id="@+id/container_records2"
        android:layout_width="350dp"
        android:layout_height="110dp"
        android:background="@drawable/drawable_shape_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <FrameLayout
            android:id="@+id/container_group6"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/container_group6">

            <ImageView
                android:id="@+id/image_rectangle7"
                android:layout_width="55dp"
                android:layout_height="22dp"
                android:background="@drawable/image_rectangle7"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/text_new2"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="-2.5dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="NEW"
                android:textColor="#FFF27400"
                android:textSize="30px" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_group7"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="23dp">

            <TextView
                android:id="@+id/text_records_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="top|left"
                android:layout_marginTop="-0.5dp"
                android:layout_marginBottom="-0.5dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Records added by you"
                android:textColor="#FF000000"
                android:textSize="35px" />

            <TextView
                android:id="@+id/text_record_rabies_vaccination"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="-1dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Record for Rabies Vaccination"
                android:textColor="#FFF27400"
                android:textSize="30px" />

            <TextView
                android:id="@+id/text_prescription2"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_gravity="left"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="-1dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="1 Prescription"
                android:textColor="#FF677294"
                android:textSize="30px" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_group8"
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:layout_gravity="top|left"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/container_group8">

            <ImageView
                android:id="@+id/image_rectangle8"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:background="@drawable/image_rectangle"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="13dp"
                android:gravity="center_horizontal|top"
                android:includeFontPadding="false"
                android:lineHeight="16.59dp"
                android:text="27"
                android:textColor="#FFFFFFFF"
                android:textSize="35px" />

            <TextView
                android:id="@+id/text_month"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="13dp"
                android:gravity="center_horizontal|top"
                android:includeFontPadding="false"
                android:lineHeight="16.59dp"
                android:text="FEB"
                android:textColor="#FFFFFFFF"
                android:textSize="35px" />
        </FrameLayout>

        <ImageView
            android:id="@+id/image_group_1"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"

            android:scaleType="centerInside"
            android:src="@drawable/dots" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>