<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/image_thank_you_rectangle1"
        android:layout_width="match_parent"
        android:layout_height="529dp"
        android:layout_gravity="center"
        android:background="@drawable/image_thank_you_rectangle1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">



        <LinearLayout
            android:id="@+id/container_thank_you_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="369dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="184dp"
            android:background="@drawable/container_thank_you_button"
            android:clipToPadding="false"
            android:gravity="left|top"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container_thank_you_group"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/container_thank_you_group">

                <ImageView
                    android:id="@+id/image_thank_you_rectangle2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_thank_you_rectangle2"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/text_done"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="-3dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Done"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/text_edit_appointment"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginLeft="88dp"
                android:layout_marginTop="17.5dp"
                android:layout_marginRight="78dp"
                android:layout_marginBottom="-0.5dp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Edit your appointment"
                android:textColor="#FF677294"
                android:textSize="14dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/container_thank_you_text"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="53dp"
            android:layout_marginBottom="302dp">

            <TextView
                android:id="@+id/text_thank_you"
                android:layout_width="213dp"
                android:layout_height="47dp"
                android:layout_gravity="top|center"

                android:layout_marginTop="20dp"
                android:layout_marginBottom="-1dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Thank You !"
                android:textColor="#FF333333"
                android:textSize="38dp" />

            <TextView
                android:id="@+id/text_appointment_successful"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginTop="89.5dp"
                android:layout_marginBottom="-0.5dp"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Your Appointment Successful"
                android:textColor="#FF677294"
                android:textSize="17dp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/image_thank_you_group"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="32dp"
            android:scaleType="centerInside"
            android:src="@drawable/image_thank_you_group" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>