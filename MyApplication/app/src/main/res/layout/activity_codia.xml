<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/container_group9"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="13dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="13dp">

        <ImageView
            android:id="@+id/image_group3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="249dp"
            android:layout_marginBottom="14.11dp"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon" />

        <ImageView
            android:id="@+id/image_group1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:layout_marginLeft="71dp"
            android:scaleType="centerInside"
            android:src="@drawable/image_group1" />

        <ImageView
            android:id="@+id/image_group2"
            android:layout_width="26.18dp"
            android:layout_height="20dp"
            android:layout_marginLeft="163dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="79.82dp"
            android:layout_marginBottom="14dp"
            android:scaleType="centerInside"
            android:src="@drawable/image_group2" />

        <ImageView
            android:id="@+id/image_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="244dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/image_menu" />
    </FrameLayout>


    <HorizontalScrollView
        android:id="@+id/horizontal_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linear_layout_doctors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="178dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <GridLayout
                android:id="@+id/grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="2">

                <!-- Example Card 1 -->
                <FrameLayout
                    android:id="@+id/container_doctor4"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="20dp">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drawable_shape_4"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:id="@+id/container_group10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="38dp"
                        android:layout_marginBottom="24dp"
                        android:gravity="left|top"
                        android:orientation="vertical">


                        <FrameLayout
                            android:id="@+id/container_image4"
                            android:layout_width="match_parent"
                            android:layout_height="84dp">

                            <ImageView
                                android:id="@+id/image_ellipse4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/image_ellipse4_doctor_6" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/container_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/text_dr_shouey"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="top"
                                android:layout_marginTop="-1dp"
                                android:layout_marginBottom="-1dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Dr. Shouey"
                                android:textColor="#FF333333"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/text_specialist_vet"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_gravity="left"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="21dp"
                                android:layout_marginBottom="-1dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Specialist Vet"
                                android:textColor="#FFF27400"
                                android:textSize="12dp" />
                        </FrameLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_like"
                        android:layout_width="16.76dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="133.12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10.12dp"
                        android:layout_marginBottom="155dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/image_like" />
                </FrameLayout>

                <!-- Example Card 2 -->
                <FrameLayout
                    android:id="@+id/container_doctor5"
                    android:layout_width="160dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="20dp">

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/drawable_shape_4"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:id="@+id/container_group_example"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="38dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="38dp"
                        android:layout_marginBottom="24dp"
                        android:gravity="left|top"
                        android:orientation="vertical">

                        <FrameLayout
                            android:id="@+id/container_image_example"
                            android:layout_width="match_parent"
                            android:layout_height="84dp">

                            <ImageView
                                android:id="@+id/image_ellipse_example"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/image_ellipse4_doctor_6" />
                        </FrameLayout>

                        <FrameLayout
                            android:id="@+id/container_text_example"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="11dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/text_dr_example"
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:layout_gravity="top"
                                android:layout_marginTop="-1dp"
                                android:layout_marginBottom="-1dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Dr. Example"
                                android:textColor="#FF333333"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/text_specialist_example"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:layout_gravity="left"
                                android:layout_marginLeft="2dp"
                                android:layout_marginTop="21dp"
                                android:layout_marginBottom="-1dp"
                                android:gravity="center_horizontal|center_vertical"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:text="Specialist Example"
                                android:textColor="#FFF27400"
                                android:textSize="12dp" />
                        </FrameLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/image_like_example"
                        android:layout_width="16.76dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="133.12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10.12dp"
                        android:layout_marginBottom="155dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/image_like" />
                </FrameLayout>
            </GridLayout>
        </LinearLayout>
    </HorizontalScrollView>


</FrameLayout>