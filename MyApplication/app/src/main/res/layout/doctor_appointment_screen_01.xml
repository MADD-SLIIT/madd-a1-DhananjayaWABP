<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/your_linear_layout_id"
    android:layout_width="match_parent"
    android:layout_height="812dp"
    android:background="@drawable/drawable_shape"
    android:gravity="left|top"
    android:orientation="vertical">

  <FrameLayout
      android:layout_width="165dp"
      android:layout_height="30dp"
      android:layout_gravity="left"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="9dp">

    <ImageView
        android:id="@+id/Appoiment_back_navigate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:scaleType="centerInside"
        android:src="@drawable/image_headline_group2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="3dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Appointment"
        android:textColor="#FF333333"
        android:textSize="18dp" />
  </FrameLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="123dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="34dp"
      android:layout_marginRight="20dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_shape_4"
        android:scaleType="centerCrop" />


    <FrameLayout
        android:layout_width="92dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/drawable_shape_2">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:scaleType="centerCrop"
          android:src="@drawable/drawable_image_4" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="203dp"
        android:layout_height="74dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="24dp">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/Appoiment_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="-1dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Dr. Pediatrician"
            android:textColor="#FF333333"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/Doctor_specialist"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="top|left"
            android:layout_marginTop="25.5dp"
            android:layout_marginBottom="-0.5dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Specialist Cardiologist "
            android:textColor="#FF677294"
            android:textSize="35px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginLeft="126dp"
            android:layout_marginTop="51.5dp"
            android:layout_marginBottom="-0.5dp"
            android:gravity="left|center_vertical"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:singleLine="true"
            android:text="$ 28.00/hr"
            android:textColor="#FF333333"
            android:textSize="30px" />
      </FrameLayout>

      <ImageView
          android:layout_width="83dp"
          android:layout_height="12.45dp"
          android:layout_marginTop="57dp"
          android:layout_marginRight="120dp"
          android:layout_marginBottom="4.55dp"
          android:scaleType="centerInside"
          android:src="@drawable/drawable_image_5" />

      <ImageView
          android:layout_width="19dp"
          android:layout_height="17dp"
          android:layout_marginLeft="181dp"
          android:layout_marginRight="3dp"
          android:layout_marginBottom="57dp"
          android:scaleType="centerInside"
          android:src="@drawable/drawable_image_6" />
    </FrameLayout>
  </FrameLayout>

  <LinearLayout
      android:layout_width="376dp"
      android:layout_height="605dp"
      android:layout_gravity="left"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="29dp"
      android:layout_weight="1"
      android:clipToPadding="false"
      android:gravity="left|top"
      android:orientation="vertical"
      android:paddingTop="1dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_gravity="left"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="-1dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Appointment For"
        android:textColor="#FF333333"
        android:textSize="16dp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_shape_3">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="21dp"
          android:layout_marginLeft="10dp"
          android:layout_gravity="left"
          android:layout_marginTop="-1dp"
          android:layout_marginBottom="-1dp"
          android:gravity="left|center_vertical"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:singleLine="true"
          android:text="Pet Owner Name: "
          android:textColor="#FF333333"
          android:textSize="30px" />


      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/drawable_shape_4"
          android:scaleType="centerCrop" />

      <EditText
          android:id="@+id/pet_owner_name"
          android:layout_width="325dp"
          android:layout_height="38dp"
          android:layout_gravity="start"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="14dp"
          android:layout_marginBottom="17.5dp"
          android:background="?android:attr/editTextBackground"
          android:gravity="start|center_vertical"
          android:hint="Pet Owner Name"
          android:includeFontPadding="true"
          android:maxLines="1"
          android:textColor="#FF677294"
          android:textSize="17sp" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_shape_3">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/drawable_shape_4"
          android:scaleType="centerCrop" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="21dp"
          android:layout_marginLeft="10dp"
          android:layout_gravity="left"
          android:layout_marginTop="-1dp"
          android:layout_marginBottom="-1dp"
          android:gravity="left|center_vertical"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:singleLine="true"
          android:text="Contact Number: "
          android:textColor="#FF333333"
          android:textSize="30px" />

      <EditText
          android:id="@+id/contact_number"
          android:layout_width="324dp"
          android:layout_height="38dp"
          android:layout_gravity="left"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="14dp"
          android:layout_marginBottom="17.5dp"
          android:background="@android:color/transparent"
          android:gravity="left|center_vertical"
          android:hint="Pet Owner Name"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:textColor="#FF677294"
          android:textSize="17dp" />
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/drawable_shape_3">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/drawable_shape_4"
          android:scaleType="centerCrop" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="21dp"
          android:layout_marginLeft="10dp"
          android:layout_gravity="left"
          android:layout_marginTop="-1dp"
          android:layout_marginBottom="-1dp"
          android:gravity="left|center_vertical"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:singleLine="true"
          android:text="Home Address: "
          android:textColor="#FF333333"
          android:textSize="30px" />

      <EditText
          android:id="@+id/address"
          android:layout_width="319dp"
          android:layout_height="38dp"
          android:layout_gravity="left"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="14dp"
          android:layout_marginBottom="17.5dp"
          android:background="@android:color/transparent"
          android:gravity="left|center_vertical"
          android:hint="Pet Owner Name"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:textColor="#FF677294"
          android:textSize="17dp" />


    </FrameLayout>

    <!-- Date Input Field -->
    <FrameLayout
        android:layout_width="365dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_shape_3">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/drawable_shape_4"
          android:scaleType="centerCrop" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="21dp"
          android:layout_marginLeft="10dp"
          android:layout_gravity="left"
          android:layout_marginTop="-1dp"
          android:layout_marginBottom="-1dp"
          android:gravity="left|center_vertical"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:singleLine="true"
          android:text="Appointment Date: "
          android:textColor="#FF333333"
          android:textSize="30px" />

      <EditText
          android:id="@+id/date_input"
          android:layout_width="325dp"
          android:layout_height="38dp"
          android:layout_gravity="start"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="14dp"
          android:layout_marginBottom="17.5dp"
          android:background="?android:attr/editTextBackground"
          android:clickable="true"
          android:focusable="false"
          android:gravity="start|center_vertical"
          android:hint="Select Date"
          android:textColor="#FF677294"
          android:textSize="17sp" />
    </FrameLayout>

    <!-- Time Input Field -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/drawable_shape_3">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/drawable_shape_4"
          android:scaleType="centerCrop" />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="21dp"
          android:layout_marginLeft="10dp"
          android:layout_gravity="left"
          android:layout_marginTop="-1dp"
          android:layout_marginBottom="-1dp"
          android:gravity="left|center_vertical"
          android:includeFontPadding="false"
          android:maxLines="1"
          android:singleLine="true"
          android:text="Avalable Time: "
          android:textColor="#FF333333"
          android:textSize="30px" />

      <EditText
          android:id="@+id/time_input"
          android:layout_width="325dp"
          android:layout_height="38dp"
          android:layout_gravity="start"
          android:layout_marginLeft="19dp"
          android:layout_marginTop="14dp"
          android:layout_marginBottom="17.5dp"
          android:background="?android:attr/editTextBackground"
          android:clickable="true"
          android:focusable="false"
          android:gravity="start|center_vertical"
          android:hint="Select Time"
          android:textColor="#FF677294"
          android:textSize="17sp" />
    </FrameLayout>


  </LinearLayout>

  <FrameLayout
      android:layout_width="295dp"
      android:layout_height="54dp"
      android:layout_gravity="left"
      android:layout_marginLeft="55dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="70dp"
      android:background="@drawable/drawable_shape_9">

    <ImageView
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/drawable_shape_10"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="92dp"
        android:layout_height="23dp"
        android:layout_gravity="top"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="126dp"
        android:layout_marginBottom="-3dp"
        android:gravity="left|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:text="Confirm"
        android:textColor="#FFFFFFFF"
        android:textSize="18dp" />
  </FrameLayout>

</LinearLayout>
