<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/container_medical_records_screen"
  android:layout_width="match_parent"
  android:layout_height="812dp"
  android:background="@drawable/container_medical_records_screen"
  android:gravity="left|top"
  android:orientation="vertical">
  
  <FrameLayout
    android:id="@+id/container_headline"
    android:layout_width="187dp"
    android:layout_height="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="36dp"
    android:layout_gravity="left">
    
    <ImageView
      android:id="@+id/back_code_add"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:layout_gravity="left"
      android:scaleType="centerInside"
      android:src="@drawable/image_headline_group" />
    
    <TextView
      android:id="@+id/text_medical_records"
      android:layout_width="match_parent"
      android:layout_height="23dp"
      android:layout_marginLeft="49dp"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="3dp"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Medical Records"
      android:textColor="#FF333333"
      android:textSize="18dp" />
  </FrameLayout>
  
  <ImageView
    android:id="@+id/image_illustration"
    android:layout_width="214dp"
    android:layout_height="214dp"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="94dp"

    android:scaleType="centerInside"
    android:src="@drawable/image_illustration" />
  
  <FrameLayout
    android:id="@+id/container_text"
    android:layout_width="303dp"
    android:layout_height="85dp"
    android:layout_marginTop="40dp"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true">
    
    <TextView
      android:id="@+id/text_add_medical_record"
      android:layout_width="wrap_content"
      android:layout_height="28dp"
      android:layout_marginLeft="36dp"
      android:layout_marginTop="-1dp"
      android:layout_marginBottom="-1dp"
      android:layout_gravity="top|left"
      android:gravity="center_horizontal|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Add a medical record."
      android:textColor="#FF222222"
      android:textSize="22dp" />

    <TextView
        android:id="@+id/text_health_history"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="39dp"
        android:gravity="center_horizontal|top"
        android:includeFontPadding="false"
        android:lineHeight="23.18dp"
        android:text="A detailed health history helps a doctor diagnose\nyou btter."
        android:textColor="#FF677294"
        android:textSize="30px" />
  </FrameLayout>
  
  <FrameLayout
    android:id="@+id/container_button"
    android:layout_width="270dp"
    android:layout_height="54dp"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="33dp"

    android:background="@drawable/container_button">
    
    <ImageView
      android:id="@+id/image_button_add_recoreds"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/image_button_rectangle"
      android:scaleType="centerCrop" />
    
    <TextView
      android:id="@+id/text_button_add_record"
      android:layout_width="match_parent"
      android:layout_height="23dp"
      android:layout_marginLeft="90dp"
      android:layout_marginRight="69dp"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="-1dp"
      android:layout_gravity="top"
      android:gravity="left|center_vertical"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:singleLine="true"
      android:text="Add a record"
      android:textColor="#FFFFFFFF"
      android:textSize="18dp" />
  </FrameLayout>
</LinearLayout>
